@using CodeFirst3.Dto
@model (Book book, List<AuthorDto> authors, List<BookTypeDto> bookTypes )

<h3 class="text-center">Kitap Güncelleme Sayfası</h3>


<form method="post" asp-area="Management" asp-action="Edit" asp-controller="Book">
    
     
    <div class="mb-3">
        <label class="form-label" asp-for="book.Name">İsim</label>
        <input class="form-control"  type="text" asp-for="book.Name"/>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="book.PageCount">Sayfa Sayısı</label>
        <input class="form-control" type="text" asp-for="book.PageCount" />
    </div>


    <div class="mb-3">
        <label class="form-label" asp-for="book.AuthorID">Yazar</label>
        <select  class="form-control" asp-for="book.AuthorID"
        asp-items="@(new SelectList(Model.authors, "ID","FullName"))" >

        </select>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="book.BookTypeID">BookType</label>
        <select class="form-control" asp-for="book.BookTypeID" 
        asp-items="@(new SelectList(Model.bookTypes, "ID","Name"))"></select>
    </div>

    <div class="mb-3">
        
        <input asp-for="book.ID" type="hidden"/>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>




</form>