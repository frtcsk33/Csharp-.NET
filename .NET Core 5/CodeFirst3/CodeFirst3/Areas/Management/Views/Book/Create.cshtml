
@using CodeFirst3.Dto

@model (Book book, List<AuthorDto> authors, List<BookTypeDto> bookTypes) 



<h3 class="text-center">Yeni kitap ekleme sayfası</h3>

<form method="post" asp-area="Management" asp-controller="Book" asp-action="Create">

    <div class="mb-3">
        <label class="form-label" asp-for="book.Name">İsim</label>
        <input type="text" class="form-control" asp-for= "book.Name"/>



    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="book.PageCount">Sayfa sayısı</label>
        <input type="text" class="form-control" asp-for="book.PageCount" />



    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="book.AuthorID">Yazar</label>
        <select class="form-control" asp-for="book.AuthorID" asp-items="@(new SelectList(Model.authors,"ID","FullName"))"> </select>


    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="book.BookTypeID">Kitap Türü</label>
        <select class="form-control" asp-for="book.BookTypeID" asp-items="@(new SelectList(Model.bookTypes,"ID","Name"))"> </select>


    </div>

    <div class="mb-3">

        <button type="submit" class="btn btn-primary">Kaydet</button>

    </div>

</form>