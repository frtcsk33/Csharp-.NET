 @model List<BookType>


<h3 class="text-center"> Kitap tipi listeleme sayfası  </h3>
<a class="btn btn-primary" asp-area="Management" style="float:right" asp-controller="BookType" asp-action="Create">Yeni ekle</a>

<table class="table table-striped">
    
    <thead>

        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Aksiyonlar</th>

        </tr>
    </thead>

   <tbody>

       @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model[i].Name</td>
                <td>
                    <a class="big-icon" asp-area="Management" asp-controller="BookType" asp-action="Edit" asp-route-id="@Model[i].ID">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-area="Management" class="big-icon margin-icon" asp-controller="BookType" asp-action="HardDelete" asp-route-id="@Model[i].ID"><i class="bi bi-x-circle-fill"></i></a>
                </td>

            </tr>
        }

      

        
       


   </tbody>
</table>